<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="AtlasToolbox.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AtlasToolbox">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="Resources\ConfigurationItemTemplate.xaml" />
                <ResourceDictionary Source="Resources\HeaderTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate x:Key="DetailTemplate">
                <StackPanel>
                    <TextBlock Text="{Binding Name}" FontSize="24" />
                    <TextBlock Text="{Binding Description}" FontSize="14" />
                </StackPanel>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
