<Page
    x:Class="AtlasToolbox.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="using:CommunityToolkit.WinUI.Controls"
    xmlns:controls="using:AtlasToolbox.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AtlasToolbox.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:AtlasToolbox.Models"
    xmlns:viewmodel="using:AtlasToolbox.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodel:HomePageViewModel}"
    mc:Ignorable="d">
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <GridView
                x:Name="itemGridView"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="-40,-50,0,0"
                HorizontalAlignment="Center"
                IsItemClickEnabled="True"
                IsSwipeEnabled="False"
                SelectionMode="None">
                <GridView.Header>
                    <Grid x:Name="HeaderGrid" Margin="0,50,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="204" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <controls:HomePageHeaderImage
                            Grid.RowSpan="2"
                            Height="396"
                            VerticalAlignment="Top" />

                        <StackPanel
                            Margin="75,0,0,0"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <TextBlock x:Name="WinVer" />
                            <TextBlock x:Name="AtlasVer" Margin="0,0,0,20" />
                            <TextBlock
                                x:Name="subHeaderBlock"
                                FontSize="18"
                                Text="AtlasOS Toolbox" />
                            <TextBlock
                                x:Name="smallHeaderText"
                                FontSize="45"
                                FontWeight="SemiBold"
                                Text="Home" />
                        </StackPanel>
                        <controls:TileGallery
                            x:Name="headerTileGallery"
                            Grid.Row="1"
                            Margin="40,0,0,0" />
                    </Grid>
                </GridView.Header>
            </GridView>
            <TextBlock
                Grid.Row="1"
                Margin="36,5,0,0"
                FontSize="20"
                Text="Profiles" />
            <ListView
                x:Name="ProfilesListView"
                Grid.Row="1"
                Width="350"
                Height="225"
                Margin="36,36,0,10"
                HorizontalAlignment="Left"
                BorderBrush="#36363e"
                BorderThickness="2"
                CornerRadius="5"
                SelectedItem="{Binding ProfileSelected, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="model:Profiles">
                        <Grid>
                            <Grid.ContextFlyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem
                                        x:Uid="Set_Profile"
                                        Click="SetProfile_Click"
                                        Text="Set this profile" />
                                    <MenuFlyoutItem
                                        x:Uid="Delete"
                                        Click="DeleteProfile"
                                        Text="Delete" />
                                </MenuFlyout>
                            </Grid.ContextFlyout>
                            <TextBlock Text="{x:Bind Name}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Margin="36,5,0,0"
                FontSize="20"
                Text="Recent toggles" />
            <ListView
                x:Name="RecentTogglesList"
                Grid.Row="1"
                Grid.Column="1"
                Width="350"
                Height="225"
                Margin="36,36,0,10"
                HorizontalAlignment="Left"
                BorderBrush="#36363e"
                BorderThickness="2"
                CornerRadius="5">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="model:RecentToggle">
                        <Grid>
                            <TextBlock Text="{Binding Description}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <StackPanel
                Grid.Row="2"
                Margin="36,0,0,24"
                Orientation="Horizontal">
                <Button
                    VerticalAlignment="Top"
                    Click="Button_Click"
                    Content="Create a new profile" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>