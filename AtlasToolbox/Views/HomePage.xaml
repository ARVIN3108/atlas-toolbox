<Page
    x:Class="AtlasToolbox.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="using:CommunityToolkit.WinUI.Controls"
    xmlns:controls="using:AtlasToolbox.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AtlasToolbox.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:AtlasToolbox.Models"
    xmlns:viewmodel="using:AtlasToolbox.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodel:HomePageViewModel}"
    mc:Ignorable="d">
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <GridView
                x:Name="itemGridView"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="-40,-50,0,0"
                HorizontalAlignment="Center"
                IsItemClickEnabled="True"
                IsSwipeEnabled="False"
                SelectionMode="None">
                <GridView.Header>
                    <Grid x:Name="HeaderGrid" Margin="0,50,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="204" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <controls:HomePageHeaderImage
                            Grid.RowSpan="2"
                            Height="396"
                            VerticalAlignment="Top" />

                        <StackPanel
                            Margin="75,0,0,0"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <TextBlock x:Name="WinVer" />
                            <TextBlock x:Name="AtlasVer" Margin="0,0,0,20" />
                            <TextBlock
                                x:Name="subHeaderBlock"
                                FontSize="18"
                                Text="AtlasOS Toolbox" />
                            <TextBlock
                                x:Name="HomeHeaderText"
                                FontSize="45"
                                FontWeight="SemiBold" />
                        </StackPanel>
                        <controls:TileGallery
                            x:Name="headerTileGallery"
                            Grid.Row="1"
                            Margin="40,0,0,0" />
                    </Grid>
                </GridView.Header>
            </GridView>
            <TextBlock
                x:Name="ProfilesHeader"
                Grid.Row="1"
                Margin="36,5,0,0"
                FontSize="20" />
            <ListView
                x:Name="ProfilesListView"
                Grid.Row="1"
                Width="350"
                Height="225"
                Margin="36,36,0,10"
                HorizontalAlignment="Left"
                BorderBrush="#36363e"
                BorderThickness="2"
                CornerRadius="5"
                SelectedItem="{Binding ProfileSelected, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="model:Profiles">
                        <Grid>
                            <Grid.ContextFlyout>
                                <MenuFlyout x:Name="MenuFlyout">
                                    <MenuFlyoutItem
                                        x:Name="SetProfile"
                                        Click="SetProfile_Click"
                                        Loaded="SetProfile_Loaded" />
                                    <MenuFlyoutItem
                                        x:Name="DeleteProfile"
                                        Click="DeleteProfile"
                                        Loaded="DeleteProfile_Loaded" />
                                </MenuFlyout>
                            </Grid.ContextFlyout>
                            <TextBlock Text="{x:Bind Name}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <TextBlock
                x:Name="RecentTogglesHeader"
                Grid.Row="1"
                Grid.Column="1"
                Margin="36,5,0,0"
                FontSize="20" />
            <ListView
                x:Name="RecentTogglesList"
                Grid.Row="1"
                Grid.Column="1"
                Width="350"
                Height="225"
                Margin="36,36,0,10"
                HorizontalAlignment="Left"
                BorderBrush="#36363e"
                BorderThickness="2"
                CornerRadius="5">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="model:RecentToggle">
                        <Grid>
                            <TextBlock Text="{Binding Description}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <StackPanel
                Grid.Row="2"
                Margin="36,0,0,24"
                Orientation="Horizontal">
                <Button
                    x:Name="NewProfileButton"
                    VerticalAlignment="Top"
                    Click="Button_Click" />
                <Grid
                    x:Name="controlRoot"
                    Width="300"
                    Height="96"
                    Padding="8"
                    HorizontalAlignment="Stretch"
                    Background="{ThemeResource ControlFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    ColumnSpacing="16"
                    CornerRadius="{StaticResource OverlayCornerRadius}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Image
                            x:Name="gridImage"
                            Grid.RowSpan="2"
                            Width="32"
                            Margin="8,12,16,0"
                            VerticalAlignment="Top"
                            AutomationProperties.Name="Image"
                            Source="C:\Users\TheyCreeper\Documents\Dev\atlas-toolbox\AtlasToolbox\assets\Logo\atlas-logo.png"
                            Stretch="Uniform" />
                        <TextBlock
                            x:Name="titleText"
                            Grid.Column="1"
                            Margin="0,12,0,0"
                            VerticalAlignment="Bottom"
                            Style="{StaticResource BodyStrongTextBlockStyle}"
                            Text="Test Title"
                            TextLineBounds="TrimToCapHeight"
                            TextWrapping="NoWrap" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            RelativePanel.Below="titleText"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="Test Subtitle"
                            TextTrimming="CharacterEllipsis" />
                    </Grid>
                </Grid>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>