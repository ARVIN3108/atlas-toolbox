<Page
    x:Class="AtlasToolbox.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AtlasToolbox.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:control="using:CommunityToolkit.WinUI.Controls"
    xmlns:controls="using:AtlasToolbox.Controls"
    xmlns:viewmodel="using:AtlasToolbox.ViewModels"
    xmlns:model="using:AtlasToolbox.Models"
    d:DataContext="{d:DesignInstance Type=viewmodel:HomePageViewModel}"
    mc:Ignorable="d">
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <GridView
                x:Name="itemGridView"
                IsItemClickEnabled="True"
                IsSwipeEnabled="False"
                SelectionMode="None"
                Margin="-40, -50, 0, 0"
                HorizontalAlignment="Center"
                Grid.Column="0"
                Grid.Row="0"
                Grid.ColumnSpan="2">
                <GridView.Header>
                    <Grid x:Name="HeaderGrid" Margin="0,50,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="204" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <controls:HomePageHeaderImage
                        Grid.RowSpan="2"
                        Height="396"
                        VerticalAlignment="Top" />

                        <StackPanel
                        Margin="75,0,0,0"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                            <TextBlock
                                x:Name="subHeaderBlock"
                                FontSize="18"
                                Text="AtlasOS Toolbox"/>
                            <TextBlock
                                x:Name="smallHeaderText"
                                FontSize="45"
                                FontWeight="SemiBold"
                                Text="Home"/>
                        </StackPanel>
                        <controls:TileGallery
                            x:Name="headerTileGallery"
                            Grid.Row="1"
                            Margin="40,0,0,0"/>
                    </Grid>
                </GridView.Header>
            </GridView>
            <ListView
                x:Name="ProfilesListView"
                CornerRadius="5"
                BorderBrush="#36363e"
                BorderThickness="2"
                SelectedItem="{Binding ProfileSelected, Mode=TwoWay}"
                Width="350"
                Height="225"
                Margin="36 36 0 10"
                HorizontalAlignment="Left"
                Grid.Row="1">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="model:Profiles">
                        <Grid>
                            <Grid.ContextFlyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem x:Uid="Set_Profile" Text="Set this profile" Click="ContactDeleteMenuyItem_Click"/>
                                </MenuFlyout>
                            </Grid.ContextFlyout>
                            <TextBlock Text="{x:Bind Name}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="36,0,0,24">
                <TextBox x:Name="ProfileNameTextBox" Width="210" HorizontalAlignment="Left" VerticalAlignment="Top" Text="{Binding Name}" TextChanged="ProfileNameTextBox_TextChanged"/>
                <Button Margin="12 0 0 0" VerticalAlignment="Top" Click="AddProfile" Content="Add"/>
                <Button Margin="12 0 0 0" VerticalAlignment="Top" Click="DeleteProfile" Content="Delete"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>