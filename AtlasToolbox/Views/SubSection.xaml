<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AtlasToolbox.Views.SubSection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AtlasToolbox.Views"
    xmlns:local1="using:AtlasToolbox.Utils"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <Grid Margin="55,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            x:Name="TitleTxt"
            Grid.Row="0"
            Margin="0,24,36,24"
            Style="{StaticResource TitleTextBlockStyle}" />
        <ScrollViewer Grid.Row="1">
            <StackPanel>

                <ItemsControl x:Name="SubMenuItems">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:SettingsCard
                                Click="OnCardClicked"
                                Description="{Binding Description}"
                                HeaderIcon="{Binding Icon}"
                                Header="{Binding Name}"
                                IsClickEnabled="True"
                                Style="{StaticResource ConfigurationSettingsCardTemplate}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ItemsControl x:Name="MultiOptionItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <controls:SettingsCard Header="{Binding Name}" HeaderIcon="{Binding Icon}" Style="{StaticResource ConfigurationSettingsCardTemplate}">
                                    <ComboBox
                                        x:Name="ConfigSwitch"
                                        ItemsSource="{Binding Options}"
                                        SelectedItem="{Binding CurrentSetting, Mode=TwoWay}" />
                                </controls:SettingsCard>
                                <!--<Border Width="5" HorizontalAlignment="Left" CornerRadius="3 0 0 3" Margin="0 0 0 10">
                                    <Border.Background>
                                        <SolidColorBrush
                                            Color="{Binding Color}"/>
                                    </Border.Background>
                                </Border>-->
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ItemsControl x:Name="ItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <controls:SettingsCard
                                    x:Name="SettingsCard"
                                    Header="{Binding Name}"
                                    HeaderIcon="{Binding Icon}"
                                    Style="{StaticResource ConfigurationSettingsCardTemplate}">
                                    <ToggleSwitch
                                        x:Name="ConfigSwitch"
                                        IsOn="{Binding CurrentSetting}"
                                        Loaded="ToggleSwitch_Loaded"
                                        Style="{StaticResource ConfigurationItemTemplate}" />
                                </controls:SettingsCard>
                                <!--<Border
                                    Width="5"
                                    Margin="0,0,0,10"
                                    HorizontalAlignment="Left"
                                    CornerRadius="3 0 0 3">
                                    <Border.Background>
                                        <SolidColorBrush Color="{Binding Color}" />
                                    </Border.Background>
                                </Border>-->
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ItemsControl x:Name="ConfigurationButton">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:SettingsCard
                                x:Name="SettingsCard"
                                Header="{Binding Description}"
                                HeaderIcon="{Binding Icon}"
                                Style="{StaticResource ConfigurationSettingsCardTemplate}">
                                <Button Command="{Binding ExecuteCommandCommand}" Content="{Binding Name}" />
                            </controls:SettingsCard>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ItemsControl x:Name="Links">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:SettingsCard
                                x:Name="LinkCard"
                                ActionIcon="{ui:FontIcon Glyph=&#xE8A7;}"
                                ActionIconToolTip="Open in new window"
                                Click="LinkCard_Click"
                                Header="{Binding Name}"
                                HeaderIcon="{ui:FontIcon Glyph=&#xE774;}"
                                IsClickEnabled="True"
                                Style="{StaticResource ConfigurationSettingsCardTemplate}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
